<form method="post" action="{{ path('app_ambiente_delete', {'id': ambiente.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ambiente.id) }}">
    <div class="d-grid d-md-flex justify-content-md-end">
        <button class="btn btn-lg btn-primary" type="submit">
            Borrar
        </button>
    </div>
</form>
