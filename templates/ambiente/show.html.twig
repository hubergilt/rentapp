{% extends 'base.html.twig' %}

{% block title %}Ambiente{% endblock %}

{% block body %}
    <h1>Ambiente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ambiente.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ ambiente.nombre }}</td>
            </tr>
            <tr>
                <th>Piso</th>
                <td>{{ ambiente.piso }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ ambiente.precio }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ ambiente.estado }}</td>
            </tr>
            <tr>
                <th>Arrendatario</th>
                <td>{{ arrendatario }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-grid d-md-flex justify-content-md-end">
        <a href="{{ path('app_ambiente_edit', {'id': ambiente.id}) }}">
            <button class="btn btn-lg btn-primary" type="submit">
                Editar
            </button>
        </a>
    </div> 

    <div class="d-grid d-md-flex justify-content-md-start">
        <a href="{{ path('app_ambiente_index') }}">
            <button class="btn btn-lg btn-primary" type="submit">
                Regresar
            </button>
        </a>
    </div>      

    {{ include('ambiente/_delete_form.html.twig') }}
{% endblock %}
