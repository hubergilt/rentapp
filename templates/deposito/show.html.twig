{% extends 'base.html.twig' %}

{% block title %}Deposito{% endblock %}

{% block body %}
    <h1>Deposito</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deposito.id }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ deposito.monto }}</td>
            </tr>
            <tr>
                <th>Anio</th>
                <td>{{ deposito.anio }}</td>
            </tr>
            <tr>
                <th>Mes</th>
                <td>{{ deposito.mes }}</td>
            </tr>
            <tr>
                <th>Observacion</th>
                <td>{{ deposito.observacion }}</td>
            </tr>
            <tr>
                <th>FechaDeposito</th>
                <td>{{ deposito.fechaDeposito ? deposito.fechaDeposito|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Arrendatario</th>
                <td>{{ arrendatario }}</td>
            </tr>
            <tr>
                <th>Ambiente</th>
                <td>{{ ambiente }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-grid d-md-flex justify-content-md-end">
        <a href="{{ path('app_deposito_edit', {'id': deposito.id}) }}">
            <button class="btn btn-lg btn-primary" type="submit">
                Editar
            </button>
        </a>
    </div> 

    <div class="d-grid d-md-flex justify-content-md-start">
        <a href="{{ path('app_deposito_index') }}">
            <button class="btn btn-lg btn-primary" type="submit">
                Regresar
            </button>
        </a>
    </div>     

    {{ include('deposito/_delete_form.html.twig') }}
{% endblock %}
