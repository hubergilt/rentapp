                    {{ form_widget(form.arrendatario,
                        {
                            'attr':
                            {
                                'class':'form-select form-select-lg',
                                'aria-label':'.form-select-lg',
                            },
                            'id':'SelectArren',
                            'disabled':'disabled',
                        }) 
