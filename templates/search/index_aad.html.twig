{% extends 'base.html.twig' %}

{% block title %}Buscar Arrendatario con Ambiente y Deposito{% endblock %}

{% block body %}
    <h1 class="p-3 text-center"><span id="search">2</span>. Buscar de Arrendatario con Ambiente y Deposito</h1>

    {{ form_start(form, {'method':'GET','action':'#'}) }}

    <div class="container pb-1">

        <div class="row justify-content-md-center">

            <div class="col col-md-auto">
                <div class="d-flex flex-row">
                    <div class="centrar">
                        <i class="fa fa-user"></i>
                        {{ form_label(form.arrendatario, 'Filtrar Arrendatario',
                            {
                                'label_attr': 
